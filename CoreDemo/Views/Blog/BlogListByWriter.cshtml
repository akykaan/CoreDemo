@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>BlogListByWriter</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog başlığı</th>
        <th>tarih</th>
        <th>kategori</th>
        <th>durum</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
	{
		 <tr>
             <td>@item.BlogId</td>
             <td>@item.BlogTitle</td>
             <td>@item.BlogCreateDate</td>
             <td>@item.CategoryId</td>
             <td>@item.BlogStatus</td>
             <td><a href="#" class="btn btn-danger">Sil</a> </td>
             <td><a href="#" class="btn btn-danger">Düzenle</a> </td>
         </tr>
	}
</table>

<a href="#" class="btn btn-primary">Yeni Blog Oluştur</a>